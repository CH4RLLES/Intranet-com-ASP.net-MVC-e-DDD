@model IntranetCPT.Models.Filtros.FiltroConteudo
@{
    ViewData["Title"] = "GerenciarConteudo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/js/Admin/GerenciarConteudo.js"></script>
<script src="~/js/Admin/LerGerenciarConteudo.js"></script>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="section-heading text-center">
                <h2>Gerenciar Conteúdo</h2>
                <p>Consórcio Processamento & Tecnologia</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-12 col-lg-12">
        <form asp-controller="Admin" asp-action="CadConteudo">
            @if (TempData["Messagem"] != null)
            {
                <p class="alert alert-info">@TempData["Messagem"]</p>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="col-form-label">Titulo:</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Introducao" class="col-form-label">Introdução:</label>
                <input asp-for="Introducao" class="form-control" />
                <span asp-validation-for="Introducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conteudo" class="col-form-label">Conteúdo:</label>
                <div class="container-fluid">
                    <div class="row">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 nopadding">
                                    <textarea asp-for="Conteudo" id="txtEditor"><script>$("#placeHolder").Editor("setText", "Hello")</script></textarea>
                                    <textarea id="txtEditor"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <input type="submit" value="Cadastrar" class="btn btn-primary" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Canselar</button>

        </form>
    </div><br />
    <hr />
    <div class="col-12 col-lg-8">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ConteudoLista.FirstOrDefault().Titulo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ConteudoLista.FirstOrDefault().Introducao)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ConteudoLista.FirstOrDefault().Conteudo)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ConteudoLista)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Introducao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Conteudo)
                        </td>
                        <td>
                            <a asp-controller="Admin" asp-action="BuscarCadConteudo" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o"></i></a>
                        </td>
                        <td><a href=""><i class="fa fa-close"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


